<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorDentisBackgroundCardview"
    app:contentPaddingLeft="@dimen/activity_horizontal_margin"
    app:contentPaddingRight="@dimen/activity_horizontal_margin"
    app:contentPaddingTop="8dp"
    app:contentPaddingBottom="8dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:minHeight="?attr/listPreferredItemHeight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:text="Nex Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/white"
            tools:text="50%" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/text_discount"
            android:textColor="@color/white"
            android:text="New Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Titulo"/>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/text_discount"
            android:textColor="@color/white"
            android:text="New Text"
            tools:text="Visita nuestras clinicas y obtenen los mejores descuentos."/>

        <TextView
            android:id="@+id/text_expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_description"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/text_discount"
            android:textColor="@color/white"
            android:text="New Text"
            android:textStyle="italic"
            tools:text="Valido hasta el 27/03/2019"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_expiry_date"
            android:layout_marginLeft="-61dp"
            android:layout_marginTop="-28dp"
            android:layout_toRightOf="@+id/text_discount"
            android:src="@drawable/ico_eliminar"
            app:backgroundTint="@color/colorPromotionBackground"
            app:borderWidth="1dp"
            app:elevation="2dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>